<% layout('layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-6 offset-3 mb-4">SignUp</h2>
    <div class="col-6 offset-3"> 
        <form action="/user/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3 ">
                <label for="username" class="form-label">username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="invalid-feedback">Kindly enter username.</div>
            </div>


            <div class="mb-3 ">
                <label for="email" class="form-label">email</label>
                <input type="text" name="email" id="email" class="form-control" required>
                <div class="invalid-feedback">Kindly enter your email.</div>
            </div>

            <div class="mb-3 ">
                <label for="password" class="form-label">password</label>
                <input type="text" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">Kindly enter your password.</div>
            </div>

            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>